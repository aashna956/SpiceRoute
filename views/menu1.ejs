<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">

        <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
        Remove this if you use the .htaccess -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <title>Spice Route Menu</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width; initial-scale=1.0">

        <!-- Replace favicon.ico & apple-touch-icon.png in the root of your domain and delete these references -->
        <link rel="shortcut icon" href="/favicon.ico">
        <link rel="apple-touch-icon" href="/apple-touch-icon.png">
       <link rel="stylesheet" href="css/menu.css">
        
    </head>

    <body>
        <div class="navs_container">
            
             <ul class="navs">
                <li><a class="navlinks" href="#" id="indian" class="active">INDIAN</a></li>
                <li><a class="navlinks" href="#" id="chinese">CHINESE</a></li>
                <li><a class="navlinks" href="#" id="bar">BAR</a></li>
            </ul>
       <div class="clear"></div><!--so that content appears at the bottom of menu-->
       <div class="nav_content_container">
           <div id="indian_content">
                <% indian.forEach(function(item){ %>
                <% if(item.name!="Main Course" && item.name!="Breads & Rice" && item.name!= "Accompaniments") { %>
                <h3><%= item.name %></h3>
                <% (item.description).forEach(function(dish){  %>
                <a class="fancybox" href="/<%= dish.name %>" >
                <p><%= dish.name %><br>
                <%= dish.description %><br>
                N.<%= dish.price %><br></p>
                </a>
                <% }); } else if (item.name=="Main Course") { //}%>
                <h2> Main Course </h2>
                <% (item.description).forEach(function(type){ //})%>
                <h3><%= type.name %></h3>
                <% (type.description).forEach(function(dish){ // }) %>
                <a href="#">
                <p><%= dish.name %><br>
                <%= dish.description %><br></p>
                </a> 
                <% }); %>
                <% }); } else { // } %>
                <h3><%= item.name %></h3>
                <% (item.description).forEach(function(dish){ //}) %>
                <a href="#">
                <p><%= dish %><br></p>
                </a>
                <% }); } %>
                <% }); %>
          
          </div>
           <div id="chinese_content">
                <% chinese.forEach(function(item){ %>
                <a href="#">
                <p><%= item.name %><br>
                <%= item.description %><br></p>
                </a>
                <% }); %>
            </div>
           <div id="bar_content">
                <% bar.forEach(function(item){ %>
                <h3><%= item.name %><br></h3>
                <% if(item.name!="Cocktails"&&item.name!="Shooters"&&item.name!="Spice Route Special Blend"&&item.name!="Mocktails"&&item.name!="Snacks") { %>
                <% (item.description).forEach(function(drink){ %>
                <p><%= drink %><br></p>
                <% }); %>
                <% } else if(item.name!="Snacks"){ %>
                <% (item.description).forEach(function(obj){ %>
                <p><%= obj.name %><br>
                <%= obj.description %></p>
                <%  }); %>
                <% } else { %>
                <% (item.description).forEach(function(obj){ %>
                <p><%= obj.name %><br><br>
                <% (obj.description).forEach(function(snack){ %>
                <%= snack %></p>
                <% }); %>
                <% }); %>               
                <% } %>
                <% }); %>
            </div>
           
       </div>
      
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <link rel="stylesheet" href="fancybox/source/jquery.fancybox.css?v=2.1.5" type="text/css" media="screen" />
        <script type="text/javascript" src="fancybox/source/jquery.fancybox.pack.js?v=2.1.5"></script>
          <script type="text/javascript">

          $(document).ready(function(){
            $('#indian_content').fadeIn(500);
            $indian = true;
            $chinese = false;
            $bar = false; 
            $("a.fancybox").fancybox({
                type: 'iframe',
                padding: 0
            });
    
        });
            $('#indian').click(function(){
                if(!$indian){
                $('#chinese_content').fadeOut(500);
                $('#bar_content').fadeOut(500);
                $('#indian_content').delay(500).fadeIn(500);
                $indian = true; 
                $chinese = false;
                $bar = false;
                $('#indian').addClass('active');
                $('#chinese').removeClass('active');
                $('#bar').removeClass('active');
                }
            });
             $('#chinese').click(function(){
                if(!$chinese){
                $('#indian_content').fadeOut(500);
                $('#bar_content').fadeOut(500);
                $('#chinese_content').delay(500).fadeIn(500);
                $chinese = true;
                $indian = false;
                $bar = false;
                $('#chinese').addClass('active');
                $('#indian').removeClass('active');
                $('#bar').removeClass('active');
                }
            });
             $('#bar').click(function(){
                if(!$bar){
                $('#chinese_content').fadeOut(500);
                $('#indian_content').fadeOut(500);
                $('#bar_content').delay(500).fadeIn(500);
                $chinese = false;
                $indian = false;
                $bar = true;
                $('#bar').addClass('active');
                $('#chinese').removeClass('active');
                $('#indian').removeClass('active');
                }
            });

          
          </script>
    </body>
    
</html>
